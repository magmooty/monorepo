  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug API",
      "cargo": {
        "args": ["build", "--bin=api", "--package=api"],
        "filter": {
          "name": "api",
          "kind": "bin"
        }
      },
      "envFile": "${workspaceFolder}/apps/api/.env",
      "args": [],
      "env": {
        "DYLD_LIBRARY_PATH": "${workspaceFolder}/target/debug"
      },
      "cwd": "${workspaceFolder}/apps/api"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Desktop Backend",
      "cargo": {
        "args": [
          "build",
          "--bin=app",
          "--package=app",
          "--manifest-path=./apps/desktop/src-tauri/Cargo.toml",
          "--no-default-features"
        ]
      },
      "env": {
        "DYLD_LIBRARY_PATH": "${workspaceFolder}/target/debug"
      },
      "cwd": "${workspaceFolder}/apps/desktop/src-tauri"
    }
  ]
}
